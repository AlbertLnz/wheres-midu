{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/layout/*": ["src/layout/*"],
      "@/pages/*": ["src/pages/*"],
      "@/styles/*": ["src/styles/*"],
      "@/sections/*": ["src/sections/*"],
      "@/data/*": ["src/data/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/*": ["src/*"],
      "@/assets/*": ["src/assets/*"]
    }
  }
}